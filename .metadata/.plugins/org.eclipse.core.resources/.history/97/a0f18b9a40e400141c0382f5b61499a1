package co.uk.tristanindustries;

import org.newdawn.slick.Image;
import org.newdawn.slick.SlickException;

public class ChessPieceKing extends ChessPiece {
	private float moveSpeed = 82;
	
	private Game game;
	
	public ChessPieceKing(Game game, int x, int y, int row, int column, int colour) throws SlickException {
		super(new Image("res/king.gif"), x, y, row, column);
		
		this.game = game;
		dx = -moveSpeed;
	}
	
	public void move(long delta) {
		if (dx < 0) {
			game.updateLogic();
		}
		if (dx > 0) {
			game.updateLogic();
		}

		super.move(delta);
	}

	public void doLogic() {
		dx = -dx;
	}

	public void collidedWith(ChessPiece other) {
		// handled elsewhere!
	}
}
