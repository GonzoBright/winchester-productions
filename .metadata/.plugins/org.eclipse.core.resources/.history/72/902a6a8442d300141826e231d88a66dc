package space;

import org.newdawn.slick.Image;

public class Button {
	private float x;
	
	private float y;
	
	private Image texture;
	
	private Image hoverTexture;
	
	private boolean hover = false;
	
	public Button(int x, int y, Image texture, Image hoverTexture) {
		this.x = x;
		this.y = y;
		this.texture = texture;
		this.hoverTexture = hoverTexture;
	}
	
	public void setX(int x) {
		this.x = x;
	}
	
	public void setY(int y) {
		this.y = y;
	}
	
	public float getX() {
		return x;
	}
	
	public float getY() {
		return y;
	}
	
	public void draw() {
		if(hover) {
			hoverTexture.draw(x,y);
		} else {
			texture.draw(x,y);
		}
	}
	
	public void update(int mouseX, int mouseY) {
		if((mouseX >= x) && (mouseX <= x + texture.getWidth()) && (mouseY <= y + texture.getHeight()) && (mouseY >= y)) {
			hover = true;
		} else {
			hover = false;
		}
	}
}
